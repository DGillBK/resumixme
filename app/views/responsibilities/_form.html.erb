<%= form_for [@position, @responsibility] do |f| %>
  <% if @responsibility.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@responsibility.errors.count, "error") %> prohibited this responsibility from being saved:</h2>

      <ul>
      <% @responsibility.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h2>Add Responsibility</h2>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <%= f.hidden_field :position_id,  :value => @position.id %>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
