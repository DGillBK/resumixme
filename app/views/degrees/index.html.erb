<p id="notice"><%= notice %></p>

<h1>Listing Degrees</h1>

<table>
  <thead>
    <tr>
      <th>Level</th>
      <th>Completed</th>
      <th>Education</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @degrees.each do |degree| %>
      <tr>
        <td><%= degree.level %></td>
        <td><%= degree.completed %></td>
        <td><%= degree.education %></td>
        <td><%= link_to 'Show', degree %></td>
        <td><%= link_to 'Edit', edit_degree_path(degree) %></td>
        <td><%= link_to 'Destroy', degree, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

