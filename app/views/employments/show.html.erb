
<div class='center'>
  <div class='formContainer'>
    <!-- <p id="notice">< %= notice %></p>   -->
    <div class='listTitle'>
      <p><%= @employment.name %><%= link_to 'Edit', edit_employment_path(@employment), class: "button workhistory" %></p>
    </div>
    <div class='lists'>
      <div class='info'>
        <p>
          <strong>Startdate:</strong>
          <%= @employment.startDate %>
        </p>

        <p>
          <strong>Enddate:</strong>
          <%= @employment.endDate %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @employment.address %>
        </p>

        <p>
          <strong>Phone:</strong>
          <%= @employment.phone %>
        </p>
        <h2>positions held</h2>
        <% @positions.each do |position| %>
          <div>
            <p class='subList'><a href="/employments/<%= @employment.id%>/positions/<%= position.id %>"><%= position.title %></a><a class="button workhistory" href="/employments/<%= @employment.id %>/positions/<%= position.id %>/edit">EDIT</a></p>
          </div>
        <% end %>
      </div>
 
      <div class='listTitle'>
        <p>Add new position</p>
      </div>

      <%= render 'positions/form' %>
    </div>
  </div>
</div> 